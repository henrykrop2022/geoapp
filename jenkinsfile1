pipeline {
    // agent  { label  'master' }
    agent any
    stages {
        stage('Build') {
            agent { docker 'maven:3.3.3' }
            steps {
                sh 'pwd'
                sh 'cat /etc/os-release'
            }
         }
        stage('Test') {
             agent { docker 'alpine:3.20.3'} 
                steps {
                    sh 'pwd'
                    sh 'cat /etc/os-release'

                }
             }
        }
    }
